# 환경 변수 예시 파일
# 실제 사용 시 .env 파일로 복사하여 값을 설정하세요

# 서버 설정
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=false

# 모델 설정
MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
MODEL_CACHE_DIR=./models/cache
MAX_TEXT_LENGTH=512

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=json

# API 설정
API_TITLE="AI Sentiment Analysis Service"
API_VERSION="1.0.0"
API_DESCRIPTION="Real-time text sentiment analysis API"

# 성능 설정
MAX_WORKERS=4
REQUEST_TIMEOUT=30